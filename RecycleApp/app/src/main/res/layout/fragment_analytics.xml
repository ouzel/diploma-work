<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="35dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <!-- Круговая диаграмма с картинкой и текстом -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="0dp">

            <!-- Кастомная круговая диаграмма -->
            <com.example.recycleapp.ui.CircularProgressView
                android:id="@+id/circularProgressView"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true" />

            <!-- Картинка внутри диаграммы -->
            <ImageView
                android:id="@+id/imageAnimation"
                android:layout_width="86dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:src="@drawable/level1" />

            <!-- Текст уровня под картинкой -->
            <TextView
                android:id="@+id/textLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageAnimation"
                android:layout_centerHorizontal="true"
                android:text="Level 3"
                android:textSize="18sp"
                android:textColor="#000"
                android:layout_marginTop="8dp"/>

            <!-- Прогресс уровня (0/50) под текстом уровня -->
            <TextView
                android:id="@+id/textProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textLevel"
                android:layout_centerHorizontal="true"
                android:text="0/50"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="4dp"/>

            <!-- Кнопка "View all" справа вверху -->
        </RelativeLayout>

        <!-- Most Recycled Items заголовок -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="История сканирований"
            android:textSize="20sp"
            android:textColor="#000"
            android:layout_marginBottom="8dp"/>

        <!-- Item Cards в сетке 2x2 -->

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp">

            <!-- Item Card 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Пластик"
                    android:textSize="16sp"
                    android:textColor="#FF6F61"/>

                <TextView
                    android:id="@+id/plasticCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="62 шт."
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <!-- Item Card 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Стекло"
                    android:textSize="16sp"
                    android:textColor="#6CC2BD"/>

                <TextView
                    android:id="@+id/glassCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 шт."
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <!-- Item Card 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Металл"
                    android:textSize="16sp"
                    android:textColor="#FFA500"/>

                <TextView
                    android:id="@+id/metalCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 шт."
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <!-- Item Card 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:background="@drawable/card_background"
                android:padding="8dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Бумага"
                    android:textSize="16sp"
                    android:textColor="#1E90FF"/>

                <TextView
                    android:id="@+id/paperCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20 шт."
                    android:textSize="20sp"
                    android:textColor="#000"/>
            </LinearLayout>

        </GridLayout>

        <Button
            android:id="@+id/buttonViewHistory"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:paddingBottom="8dp"
            android:backgroundTint="@color/primary_variant"
            android:text="Подробная история"
            android:textColor="#FFFFFF" />

    </LinearLayout>
</ScrollView>

