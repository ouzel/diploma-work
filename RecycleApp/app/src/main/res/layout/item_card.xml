<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp"
    app:strokeWidth="1dp"
    app:strokeColor="#E0E0E0"
    android:backgroundTint="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Заголовок: Код и материал -->
        <TextView
            android:id="@+id/text_material"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Код: 003 | PVC"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Тип материала -->
        <TextView
            android:id="@+id/text_material_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Тип: Поливинилхлорид"
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="#86A648"
            android:layout_marginBottom="8dp" />

        <!-- Описание -->
        <TextView
            android:id="@+id/text_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Пластик, используемый для изготовления труб, оконных рам и упаковочных пленок."
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#666666"
            android:layout_marginBottom="10dp" />

        <!-- Рекомендации по переработке -->
        <TextView
            android:id="@+id/text_recycling_recommendations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Рекомендации: Редко принимается для переработки. Избегайте сжигания, так как выделяются токсичные вещества."
            android:textSize="12sp"
            android:textColor="#4F6C17"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="10dp" />

        <!-- Примеры использования -->
        <TextView
            android:id="@+id/text_examples_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Примеры использования:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_examples"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="• Трубы\n• Упаковочная пленка\n• Игрушки"
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#666666"
            android:layout_marginBottom="10dp" />

        <!-- Заметки -->
        <TextView
            android:id="@+id/text_notes_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Заметки:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/text_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Сложен в переработке из-за наличия добавок. Рекомендуется минимизировать использование."
            android:textSize="12sp"
            android:lineSpacingExtra="4dp"
            android:textColor="#666666" />

        <!-- Изображение материала -->
        <ImageView
            android:id="@+id/image_material"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:contentDescription="Изображение материала"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

